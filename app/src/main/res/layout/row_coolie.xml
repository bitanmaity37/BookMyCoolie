<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical">
    <com.google.android.material.card.MaterialCardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        app:cardElevation="20dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:weightSum="10"
            android:orientation="horizontal">
            <com.google.android.material.imageview.ShapeableImageView
                android:id="@+id/shpimv_coolie"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="2.5"
                android:layout_marginEnd="5dp"
                android:background="@drawable/c1"
                android:padding="5dp"
                app:shapeAppearance="@style/RoundedImageView2" />

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="7.5"
                android:orientation="vertical"
                android:weightSum="10"
                android:padding="5dp">
                <TextView
                    android:id="@+id/tv_cname"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="2"
                    android:text="NAME: RAJIV SHUKLA"
                    android:fontFamily="@font/montserrat_medium"
                    />
                <LinearLayout
                    android:layout_marginTop="5dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="2"
                    android:orientation="horizontal"
                    android:weightSum="2">
                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1.2"
                        android:id="@+id/phn"
                        android:text="MOBILE: 8987675654"
                        android:fontFamily="@font/montserrat_medium"/>


                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="25dp"
                    android:orientation="horizontal"
                    android:layout_marginTop="2dp"
                    android:weightSum="3">
                    <TextView
                        android:gravity="center_vertical"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="2.0"
                        android:id="@+id/billa"
                        android:text="BILLA NO:"
                        android:fontFamily="@font/montserrat_medium"/>
                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1.0"
                        android:gravity="end">
                        <Button
                            android:id="@+id/btnmdfy"
                            style="@style/Widget.Material3.Button.IconButton.Filled"

                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:backgroundTint="@color/white"
                            android:drawableTint="@color/black"
                            android:gravity="center"
                            app:icon="@drawable/baseline_edit_note_24"
                            app:iconSize="20dp"
                            app:iconTint="@color/maincolor" />
                        <Button
                            android:id="@+id/btndlt"
                            style="@style/Widget.Material3.Button.IconButton.Filled"

                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:backgroundTint="@color/white"
                            android:drawableTint="@color/black"
                            android:gravity="center"
                            app:icon="@drawable/baseline_delete_forever_24"
                            app:iconSize="20dp"
                            app:iconTint="@color/red" />
                    </LinearLayout>

                </LinearLayout>
            </LinearLayout>

        </LinearLayout>


    </com.google.android.material.card.MaterialCardView>

</LinearLayout>


