<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/order_details_card"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="12dp"
    app:cardCornerRadius="12dp">


    <LinearLayout
        android:id="@+id/linear_layout_coolie"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="horizontal"
        android:padding="8dp">

        <ImageView
            android:id="@+id/coolie_photo"
            android:layout_width="240dp"
            android:layout_height="80dp"
            android:layout_weight="1"
            android:src="@drawable/c1" />

        <LinearLayout
            android:id="@+id/coolie_details"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical"
            android:paddingStart="12dp"
            android:paddingTop="8dp">

            <LinearLayout
                android:id="@+id/coolie_name_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="horizontal">

                <!--<TextView
                    android:id="@+id/coolie_name_label"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="0.75"
                    android:maxLines="1"
                    android:paddingEnd="5dp"
                    android:text="Name:"
                    android:textAppearance="?attr/textAppearanceSubtitle1"
                    android:textColor="@color/black"
                    android:textStyle="bold" />-->

                <TextView
                    android:id="@+id/coolie_name"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="0.25"
                    android:maxLines="1"
                    android:paddingEnd="10dp"
                    android:text="Bhanu Pratap Singh"
                    android:textAppearance="?attr/textAppearanceSubtitle1"
                    android:textColor="@color/black"
                    android:textStyle="bold" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/coolie_billa_no_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="horizontal">

                <!--<TextView
                    android:id="@+id/coolie_billa_no_label"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="0.7"
                    android:maxLines="1"
                    android:paddingEnd="5dp"
                    android:text="Billa No:"
                    android:textAppearance="?attr/textAppearanceSubtitle1"
                    android:textColor="@color/black"
                    android:textStyle="bold" />-->

                <TextView
                    android:id="@+id/coolie_billa_no"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="0.3"
                    android:maxLines="1"
                    android:paddingEnd="10dp"
                    android:text="1234567890"
                    android:textAppearance="?attr/textAppearanceSubtitle1"
                    android:textColor="@color/black"
                    android:textStyle="bold" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/coolie_phone_no_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="horizontal">

                <!--<TextView
                    android:id="@+id/coolie_phone_no_label"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="65"
                    android:maxLines="1"
                    android:paddingEnd="5dp"
                    android:text="Phone No: 1234567890"
                    android:textAppearance="?attr/textAppearanceSubtitle1"
                    android:textColor="@color/black"
                    android:textStyle="bold" />-->

                <TextView
                    android:id="@+id/coolie_phone_no"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_weight="55"
                    android:paddingEnd="10dp"
                    android:text="1234567890"
                    android:textAppearance="?attr/textAppearanceSubtitle1"
                    android:textColor="@color/black"
                    android:textStyle="bold" />

                <ImageView
                    android:id="@+id/coolie_phone_no_btn"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:src="@drawable/phone_fill" />
            </LinearLayout>

        </LinearLayout>

    </LinearLayout>

</com.google.android.material.card.MaterialCardView>