<?xml version="1.0" encoding="utf-8"?>

    <com.google.android.material.card.MaterialCardView
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        app:cardElevation="20dp"
    android:background="@android:color/transparent">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:weightSum="10"
            android:padding="5dp">
            <TextView
                android:id="@+id/reqpsngr"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="2"
                android:text="RAJIV SHUKLA"
                android:fontFamily="@font/rubik_bold"
                android:gravity="center_vertical"
                android:textColor="@color/black"
                android:textSize="17sp"
                />
            <com.google.android.material.divider.MaterialDivider
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:dividerInsetStart="2dp"
                app:dividerInsetEnd="2dp"
                app:dividerColor="@color/black"
                app:dividerThickness="1dp"/>
            <LinearLayout
                android:layout_marginTop="5dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="2"
                android:orientation="horizontal"
                android:weightSum="2">
                <TextView
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="0.75"
                    android:id="@+id/reqid"
                    android:text="ID : 437"
                    android:fontFamily="@font/rubik_light"
                    android:gravity="center_vertical"
                    android:textColor="@color/grey"
                    android:textSize="17dp"/>
                <TextView
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1.25"
                    android:id="@+id/psngrphn"
                    android:text="2024/28/06 10:00"
                    android:fontFamily="@font/rubik_light"
                    android:gravity="center_vertical"
                    android:textColor="@color/grey"
                    android:textSize="17dp"/>

            </LinearLayout>

            <TextView
                android:id="@+id/reqtype"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="2"
                android:text="SERVICES: COOLIE + CART + CHAIR"
                android:fontFamily="@font/rubik_medium"
                android:gravity="center_vertical"
                android:textColor="@color/black"
                android:textSize="15dp"
                />


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="2dp"
                android:weightSum="3">
                <TextView
                    android:gravity="center_vertical"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1.1"
                    android:id="@+id/pltfrm"
                    android:text="PLATFORM : 21"
                    android:fontFamily="@font/rubik_medium"
                    android:textColor="@color/grey"
                    android:textSize="12dp"/>
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="0.3"
                    android:gravity="end">
                    <ImageView
                        android:padding="5dp"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:src="@drawable/arrow_right"/>
                </LinearLayout>
                <TextView
                    android:gravity="center_vertical"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1.1"
                    android:id="@+id/pltfrmdrop"
                    android:text="PLATFORM : 21"
                    android:fontFamily="@font/rubik_medium"
                    android:textColor="@color/grey"
                    android:textSize="12dp"/>
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="0.5"
                    android:gravity="end">
                    <Button
                        android:id="@+id/btnassgn"
                        style="@style/Widget.Material3.Button.IconButton.Filled"

                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:backgroundTint="@color/white"
                        android:drawableTint="@color/black"
                        android:gravity="center"
                        app:icon="@drawable/baseline_assignment_ind_24"
                        app:iconSize="20dp"
                        app:iconTint="@color/maincolor" />

                </LinearLayout>

            </LinearLayout>
        </LinearLayout>

    </com.google.android.material.card.MaterialCardView>

