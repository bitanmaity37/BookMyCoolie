<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#666666"
    android:orientation="vertical">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/bottomsheet">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:orientation="horizontal"
                android:weightSum="1">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="start"
                    android:layout_weight="0.95"
                    android:fontFamily="@font/ubuntu_bold"
                    android:padding="14dp"
                    android:text="Book Wheel Chair"
                    android:textSize="18dp"
                    android:textStyle="bold" />

                <Button
                    android:id="@+id/viewMore"
                    style="@style/Widget.Material3.Button.IconButton.Filled"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:backgroundTint="@color/white"
                    android:drawableTint="@color/black"
                    android:gravity="center"
                    app:icon="@drawable/baseline_close_24"
                    app:iconSize="20dp"
                    app:iconTint="@color/black" />
            </LinearLayout>

            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/selectStationInputLayout"
                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox.ExposedDropdownMenu"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                android:layout_marginEnd="10dp"
                android:backgroundTint="@color/white"
                android:focusable="true"
                android:focusableInTouchMode="true"
                android:focusedByDefault="false"
                android:foregroundTint="@color/white"
                android:hint="SELECT STATION"
                android:textColorHint="@color/maincolor4"
                app:boxCornerRadiusTopStart="5dp"
                app:boxStrokeColor="@color/maincolor4"
                app:counterOverflowTextColor="@color/maincolor4"
                app:counterTextColor="@color/maincolor4"
                app:errorEnabled="true"
                app:helperTextEnabled="true"
                app:helperTextTextColor="@color/white"
                app:hintEnabled="true"
                app:hintTextColor="@color/maincolor4"
                app:placeholderTextColor="@color/maincolor6"
                app:prefixTextColor="@color/maincolor4"
                app:suffixTextColor="@color/maincolor4">


                <AutoCompleteTextView
                    android:id="@+id/select_station_input"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:fontFamily="@font/montserrat_semibold"
                    android:textColor="@color/maincolor4"
                    android:textSize="12sp"
                    app:errorEnabled="true"
                    app:startIconContentDescription="Hello" />
            </com.google.android.material.textfield.TextInputLayout>


            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/select_pickup_input_layout"
                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox.ExposedDropdownMenu"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                android:layout_marginEnd="10dp"
                android:backgroundTint="@color/white"
                android:focusable="true"
                android:focusableInTouchMode="true"
                android:focusedByDefault="false"
                android:foregroundTint="@color/white"
                android:hint="SELCET PICKUP AREA"
                android:textColorHint="@color/maincolor4"
                app:boxCornerRadiusTopStart="5dp"
                app:boxStrokeColor="@color/maincolor4"
                app:counterOverflowTextColor="@color/maincolor4"
                app:counterTextColor="@color/maincolor4"
                app:errorEnabled="true"
                app:helperTextEnabled="true"
                app:helperTextTextColor="@color/white"
                app:hintEnabled="true"
                app:hintTextColor="@color/maincolor4"
                app:placeholderTextColor="@color/maincolor6"
                app:prefixTextColor="@color/maincolor4"
                app:suffixTextColor="@color/maincolor4">


                <AutoCompleteTextView
                    android:id="@+id/select_pickup_input"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:fontFamily="@font/montserrat_semibold"
                    android:textColor="@color/maincolor4"
                    android:textSize="12sp"
                    app:errorEnabled="true"
                    app:startIconContentDescription="Hello" />
            </com.google.android.material.textfield.TextInputLayout>


            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/select_dropping_input_layout"
                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox.ExposedDropdownMenu"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                android:layout_marginEnd="10dp"
                android:backgroundTint="@color/white"
                android:focusable="true"
                android:focusableInTouchMode="true"
                android:focusedByDefault="false"
                android:foregroundTint="@color/white"
                android:hint="SELECT DROPPING AREA"
                android:textColorHint="@color/maincolor4"
                app:boxCornerRadiusTopStart="5dp"
                app:boxStrokeColor="@color/maincolor4"
                app:counterOverflowTextColor="@color/maincolor4"
                app:counterTextColor="@color/maincolor4"
                app:errorEnabled="true"
                app:helperTextEnabled="true"
                app:helperTextTextColor="@color/white"
                app:hintEnabled="true"
                app:hintTextColor="@color/maincolor4"
                app:placeholderTextColor="@color/maincolor6"
                app:prefixTextColor="@color/maincolor4"
                app:suffixTextColor="@color/maincolor4">


                <AutoCompleteTextView
                    android:id="@+id/select_dropping_input"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:fontFamily="@font/montserrat_semibold"
                    android:textColor="@color/maincolor4"
                    android:textSize="12sp"
                    app:errorEnabled="true"
                    app:startIconContentDescription="Hello" />
            </com.google.android.material.textfield.TextInputLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <com.google.android.material.textfield.TextInputLayout
                    android:id="@+id/chair_required_input_layout"
                    style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="10dp"
                    android:layout_marginEnd="10dp"
                    android:layout_weight="1"
                    android:backgroundTint="@color/white"
                    android:focusable="true"
                    android:focusableInTouchMode="true"
                    android:focusedByDefault="false"
                    android:foregroundTint="@color/white"
                    android:hint="NO. OF WHEEL CHAIR REQUIRED"
                    android:textColorHint="@color/maincolor4"
                    app:boxCornerRadiusTopStart="5dp"
                    app:boxStrokeColor="@color/maincolor4"
                    app:counterOverflowTextColor="@color/maincolor4"
                    app:counterTextColor="@color/maincolor4"
                    app:cursorColor="@color/maincolor4"
                    app:errorEnabled="true"
                    app:helperTextEnabled="true"
                    app:helperTextTextColor="@color/white"
                    app:hintEnabled="true"
                    app:hintTextColor="@color/maincolor4"
                    app:placeholderTextColor="@color/maincolor6"
                    app:prefixTextColor="@color/maincolor4"
                    app:suffixTextColor="@color/maincolor4">


                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/chair_required_input"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/montserrat_semibold"
                        android:inputType="text"
                        android:textColor="@color/maincolor4"
                        android:textSize="14sp"
                        app:errorEnabled="true"
                        app:startIconContentDescription="Hello" />
                </com.google.android.material.textfield.TextInputLayout>


            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <com.google.android.material.textfield.TextInputLayout
                    android:id="@+id/approx_weigt_input_layout"
                    style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="10dp"
                    android:layout_marginEnd="10dp"
                    android:layout_weight="1"
                    android:backgroundTint="@color/white"
                    android:focusable="true"
                    android:focusableInTouchMode="true"
                    android:focusedByDefault="false"
                    android:foregroundTint="@color/white"
                    android:hint="WEIGHT OF BAGS"
                    android:textColorHint="@color/maincolor4"
                    app:boxCornerRadiusTopStart="5dp"
                    app:boxStrokeColor="@color/maincolor4"
                    app:counterOverflowTextColor="@color/maincolor4"
                    app:counterTextColor="@color/maincolor4"
                    app:cursorColor="@color/maincolor4"
                    app:errorEnabled="true"
                    app:helperTextEnabled="true"
                    app:helperTextTextColor="@color/white"
                    app:hintEnabled="true"
                    app:hintTextColor="@color/maincolor4"
                    app:placeholderTextColor="@color/maincolor6"
                    app:prefixTextColor="@color/maincolor4"
                    app:suffixTextColor="@color/maincolor4">


                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/approx_weight_input"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/montserrat_semibold"
                        android:inputType="text"
                        android:textColor="@color/maincolor4"
                        android:textSize="14sp"
                        app:errorEnabled="true"
                        app:startIconContentDescription="Hello" />
                </com.google.android.material.textfield.TextInputLayout>

                <com.google.android.material.textfield.TextInputLayout
                    android:id="@+id/no_of_bags_input_layout"
                    style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="10dp"
                    android:layout_marginEnd="10dp"
                    android:layout_weight="1"
                    android:backgroundTint="@color/white"
                    android:focusable="true"
                    android:focusableInTouchMode="true"
                    android:focusedByDefault="false"
                    android:foregroundTint="@color/white"
                    android:hint="NO. OF BAGS"
                    android:textColorHint="@color/maincolor4"
                    app:boxCornerRadiusTopStart="5dp"
                    app:boxStrokeColor="@color/maincolor4"
                    app:counterOverflowTextColor="@color/maincolor4"
                    app:counterTextColor="@color/maincolor4"
                    app:cursorColor="@color/maincolor4"
                    app:errorEnabled="true"
                    app:helperTextEnabled="true"
                    app:helperTextTextColor="@color/white"
                    app:hintEnabled="true"
                    app:hintTextColor="@color/maincolor4"
                    app:placeholderTextColor="@color/maincolor6"
                    app:prefixTextColor="@color/maincolor4"
                    app:suffixTextColor="@color/maincolor4">


                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/no_of_bags_input"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/montserrat_semibold"
                        android:inputType="text"
                        android:textColor="@color/maincolor4"
                        android:textSize="14sp"
                        app:errorEnabled="true"
                        app:startIconContentDescription="Hello" />
                </com.google.android.material.textfield.TextInputLayout>
            </LinearLayout>



            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <com.google.android.material.textfield.TextInputLayout
                    android:id="@+id/approx_start_time_input_layout"
                    style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="10dp"
                    android:layout_marginEnd="10dp"
                    android:layout_weight="1"
                    android:backgroundTint="@color/white"
                    android:focusedByDefault="false"
                    android:foregroundTint="@color/white"
                    android:hint="START TIME"
                    android:textColorHint="@color/maincolor4"
                    app:boxCornerRadiusTopStart="5dp"
                    app:boxStrokeColor="@color/maincolor4"
                    app:counterOverflowTextColor="@color/maincolor4"
                    app:counterTextColor="@color/maincolor4"
                    app:cursorColor="@color/maincolor4"
                    app:errorEnabled="true"
                    app:helperTextEnabled="true"
                    app:helperTextTextColor="@color/white"
                    app:hintEnabled="true"
                    app:hintTextColor="@color/maincolor4"
                    app:placeholderTextColor="@color/maincolor6"
                    app:prefixTextColor="@color/maincolor4"
                    app:suffixTextColor="@color/maincolor4">


                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/approx_start_time_input"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/montserrat_semibold"
                        android:focusable="false"
                        android:focusableInTouchMode="false"
                        android:clickable="true"
                        android:inputType="none"
                        android:textColor="@color/maincolor4"
                        android:textSize="14sp"
                        app:errorEnabled="true"
                        app:startIconContentDescription="Hello" />
                </com.google.android.material.textfield.TextInputLayout>

                <com.google.android.material.textfield.TextInputLayout
                    android:id="@+id/approx_end_time_input_layout"
                    style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="10dp"
                    android:layout_marginEnd="10dp"
                    android:layout_weight="1"
                    android:backgroundTint="@color/white"
                    android:focusedByDefault="false"
                    android:foregroundTint="@color/white"
                    android:hint="END TIME"
                    android:textColorHint="@color/maincolor4"
                    app:boxCornerRadiusTopStart="5dp"
                    app:boxStrokeColor="@color/maincolor4"
                    app:counterOverflowTextColor="@color/maincolor4"
                    app:counterTextColor="@color/maincolor4"
                    app:cursorColor="@color/maincolor4"
                    app:errorEnabled="true"
                    app:helperTextEnabled="true"
                    app:helperTextTextColor="@color/white"
                    app:hintEnabled="true"
                    app:hintTextColor="@color/maincolor4"
                    app:placeholderTextColor="@color/maincolor6"
                    app:prefixTextColor="@color/maincolor4"
                    app:suffixTextColor="@color/maincolor4">


                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/approx_end_time_input"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/montserrat_semibold"
                        android:focusable="false"
                        android:focusableInTouchMode="false"
                        android:clickable="true"
                        android:inputType="none"
                        android:textColor="@color/maincolor4"
                        android:textSize="14sp"
                        app:errorEnabled="true"
                        app:startIconContentDescription="Hello" />
                </com.google.android.material.textfield.TextInputLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/show_approx_amount_label"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="11dp"
                    android:layout_weight="1"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:textColor="@color/maincolor4"
                    android:fontFamily="@font/ubuntu_regular"
                    android:text="Approx. Amount: " />

                <TextView
                    android:id="@+id/show_approx_amount"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="10dp"
                    android:layout_weight="1"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:textColor="@color/maincolor4"
                    android:fontFamily="@font/ubuntu_regular"
                    android:text="55₹" />
            </LinearLayout>


            <com.google.android.material.button.MaterialButton
                android:id="@+id/submit_book_coolie_form"
                style="@style/Widget.Material3.Button.ElevatedButton"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:fontFamily="@font/ubuntu_regular"
                android:gravity="center"
                android:text="SAVE"
                android:textColor="@color/white"
                android:textSize="15sp"
                android:textStyle="bold"
                app:backgroundTint="@color/dark_blue"
                app:cornerRadius="5dp"
                app:elevation="5dp"
                app:rippleColor="@color/light_blue" />

        </LinearLayout>
    </FrameLayout>

</androidx.coordinatorlayout.widget.CoordinatorLayout>