<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical">
    <com.google.android.material.card.MaterialCardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        app:cardElevation="20dp"
        app:strokeColor="@color/maincolor6"
        app:strokeWidth="1dp"
        app:cardCornerRadius="8dp"
        android:backgroundTint="@color/white">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:weightSum="10"
            android:padding="5dp">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:weightSum="1">
                <TextView
                    android:id="@+id/optid"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.5"
                    android:text="ID: AAAAA"
                    android:fontFamily="@font/montserrat_bold"
                    android:textSize="13dp"
                    android:textColor="@color/maincolor4"
                    />
                <TextView
                    android:id="@+id/optname"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.5"
                    android:text="OPERATOR: RAJIV SHUKLA"
                    android:fontFamily="@font/montserrat_bold"
                    android:textSize="13dp"
                    android:textColor="@color/maincolor4"
                    />
            </LinearLayout>
            <LinearLayout
                android:layout_marginTop="5dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="2"
                android:orientation="horizontal"
                android:weightSum="2">
                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:id="@+id/phn"
                    android:text="PHONE : 8987675654"
                    android:fontFamily="@font/montserrat_medium"
                    android:textSize="13dp"
                    android:textColor="@color/maincolor2"/>
                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:id="@+id/email"
                    android:text="EMAIL : abc.abc@abc.in"
                    android:fontFamily="@font/montserrat_medium"
                    android:textSize="13dp"
                    android:textColor="@color/maincolor2"/>

            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="2dp"
                android:weightSum="3">
                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="2"
                    android:id="@+id/stn"
                    android:text="STN : DURG"
                    android:fontFamily="@font/montserrat_medium"
                    android:textSize="13dp"
                    android:textColor="@color/maincolor2"/>
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="end">
                    <Button
                        android:id="@+id/btnmdfy"
                        style="@style/Widget.Material3.Button.IconButton.Filled"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:backgroundTint="@color/white"
                        android:drawableTint="@color/black"
                        android:gravity="center"
                        app:icon="@drawable/baseline_edit_note_24"
                        app:iconSize="20dp"
                        app:iconTint="@color/maincolor"/>

                    <Button
                        android:id="@+id/btndlt"
                        style="@style/Widget.Material3.Button.IconButton.Filled"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:backgroundTint="@color/white"
                        android:drawableTint="@color/black"
                        android:gravity="center"
                        app:icon="@drawable/baseline_delete_forever_24"
                        app:iconSize="20dp"
                        app:iconTint="@color/red" />
                </LinearLayout>

            </LinearLayout>
        </LinearLayout>

    </com.google.android.material.card.MaterialCardView>

</LinearLayout>