<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical">
    <com.google.android.material.card.MaterialCardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        app:cardElevation="20dp"
        app:strokeColor="@color/maincolor6"
        app:strokeWidth="1dp"
        app:cardCornerRadius="8dp"
        android:backgroundTint="@color/white">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="5dp">
            <TextView
                android:id="@+id/stname"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="RAIPUR"
                android:fontFamily="@font/rubik_bold"
                android:textSize="17dp"
                android:textColor="@color/black"
                android:gravity="center_vertical"
                />
            <com.google.android.material.divider.MaterialDivider
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:dividerInsetStart="2dp"
                app:dividerInsetEnd="2dp"
                app:dividerColor="@color/black"
                app:dividerThickness="1dp"/>
            <LinearLayout
                android:layout_marginTop="2dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:weightSum="2"
                android:padding="2dp">
                <ImageView
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="0.1"
                    android:src="@drawable/statn"/>
                <TextView
                    android:id="@+id/stcode"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.9"
                    android:text="STATION CODE"
                    android:fontFamily="@font/rubik_medium"
                    android:textSize="14dp"
                    android:textColor="@color/grey2"
                    android:paddingStart="2dp"
                    android:gravity="center_vertical"
                    />


            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="2dp"
                android:weightSum="3"
                android:padding="2dp">
                <ImageView
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="0.15"
                    android:src="@drawable/cart2"/>
                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight=".85"
                    android:id="@+id/countcart"
                    android:text="10"
                    android:fontFamily="@font/rubik_regular"
                    android:textStyle="bold"
                    android:textSize="13dp"
                    android:padding="2dp"/>
                <ImageView
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="0.15"
                    android:src="@drawable/wheelchair2"/>
                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight=".85"
                    android:id="@+id/countwc"
                    android:text="10"
                    android:fontFamily="@font/rubik_regular"
                    android:textStyle="bold"
                    android:textSize="13dp"
                    android:padding="2dp"/>
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="end">
                    <Button
                        android:id="@+id/btnmdfyinventory"
                        style="@style/Widget.Material3.Button.IconButton.Filled"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:backgroundTint="@color/white"
                        android:drawableTint="@color/black"
                        android:gravity="center"
                        app:icon="@drawable/edit_inventory"
                        app:iconSize="20dp"
                        app:iconTint="@color/maincolor"/>
                    <Button
                        android:id="@+id/btnmdfyarea"
                        style="@style/Widget.Material3.Button.IconButton.Filled"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:backgroundTint="@color/white"
                        android:drawableTint="@color/black"
                        android:gravity="center"
                        app:icon="@drawable/edit_area"
                        app:iconSize="20dp"
                        app:iconTint="@color/maincolor"/>

                    <!--<androidx.appcompat.widget.SwitchCompat
                        android:layout_marginEnd="2dp"
                        android:id="@+id/switch_oprtractv"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:checked="true"
                        android:fontFamily="@font/montserrat_bold"
                        android:textColor="@color/maincolor4"
                        android:gravity="center"
                        android:layout_gravity="center"
                        app:trackTint="@color/completed"
                        />-->
                </LinearLayout>

            </LinearLayout>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="PLATFORMS &amp; PICKUP POINTS"
                android:fontFamily="@font/rubik_medium"
                android:textSize="14dp"
                android:textColor="@color/grey2"
                android:paddingStart="2dp"
                android:gravity="center_vertical"/>
            <com.google.android.material.divider.MaterialDivider
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:dividerInsetStart="2dp"
                app:dividerInsetEnd="2dp"
                app:dividerColor="@color/black"
                app:dividerThickness="1dp"
                />

            <androidx.recyclerview.widget.RecyclerView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/rv_station_child" />
        </LinearLayout>

    </com.google.android.material.card.MaterialCardView>

</LinearLayout>