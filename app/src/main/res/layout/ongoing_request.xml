<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="12dp"
    app:cardCornerRadius="6dp">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="12dp">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:id="@+id/station_name"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="3"
                android:fontFamily="@font/rubik_regular"
                android:textSize="13dp"
                android:maxLines="1"
                android:text="Station Name"
                android:textAppearance="?attr/textAppearanceBody1"
                android:textColor="@color/black" />
            <TextView
                android:id="@+id/request_id"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:fontFamily="@font/rubik_regular"
                android:maxLines="1"
                android:textSize="13dp"
                android:text="Request Id"
                android:textAppearance="?attr/textAppearanceSubtitle1"
                android:textColor="@color/black" />
        </LinearLayout>
        <RelativeLayout
            android:id="@+id/linear_layout_pickup_status"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <TextView
                android:id="@+id/pickup_area"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:layout_weight="1"
                android:fontFamily="@font/rubik_regular"
                android:maxLines="1"
                android:paddingEnd="8dp"
                android:text="Pickup From"
                android:textSize="13dp"
                android:textAppearance="?attr/textAppearanceBody1"
                android:textColor="@color/black" />
            <ImageView
                android:id="@+id/arrow_right"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toEndOf="@id/pickup_area"
                android:layout_weight="1.5"
                android:padding="5dp"
                android:src="@drawable/arrow_right" />
            <TextView
                android:id="@+id/dropping_area"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:layout_toEndOf="@id/arrow_right"
                android:layout_weight="1"
                android:fontFamily="@font/rubik_regular"
                android:maxLines="1"
                android:paddingStart="8dp"
                android:textSize="13dp"
                android:text="drop at"
                android:textAlignment="textEnd"
                android:textAppearance="?attr/textAppearanceBody1"
                android:textColor="@color/black" />
        </RelativeLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:id="@+id/coolie_name"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="2"
                android:fontFamily="@font/rubik_regular"
                android:maxLines="1"
                android:text="Coolie Name"
                android:textSize="13dp"
                android:textAppearance="?attr/textAppearanceBody1"
                android:textColor="@color/black" />
            <TextView
                android:id="@+id/mobile_number"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:fontFamily="@font/rubik_regular"
                android:maxLines="1"
                android:text="0123456789"
                android:textSize="13dp"
                android:textAppearance="?attr/textAppearanceSubtitle1"
                android:textColor="@color/black" />
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:id="@+id/billa_number"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="3"
                android:fontFamily="@font/rubik_regular"
                android:maxLines="1"
                android:text="Billa No: 254655484"
                android:textSize="13dp"
                android:textAppearance="?attr/textAppearanceBody1"
                android:textColor="@color/black" />
            <TextView
                android:id="@+id/request_status"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:fontFamily="@font/rubik_regular"
                android:maxLines="1"
                android:text="pending"
                android:textSize="13dp"
                android:textAppearance="?attr/textAppearanceSubtitle1"
                android:textColor="@color/black" />
        </LinearLayout>
    </LinearLayout>
</com.google.android.material.card.MaterialCardView>
