<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="8dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Portage charges of Sachayaks (Licensed Porters) at stations"
            android:textStyle="bold"
            android:textSize="16sp"
            android:layout_gravity="center"
            android:paddingBottom="8dp"/>

        <TableLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:stretchColumns="1">

            <TableRow>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/cell_border"
                    android:text="Sl. No."
                    android:textStyle="bold"
                    android:textSize="12sp"
                    android:padding="4dp"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/cell_border"
                    android:text="Description"
                    android:textStyle="bold"
                    android:textSize="12sp"
                    android:padding="4dp"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/cell_border"
                    android:text="Station"
                    android:textStyle="bold"
                    android:textSize="12sp"
                    android:padding="4dp"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/cell_border"
                    android:text="Category"
                    android:textStyle="bold"
                    android:textSize="12sp"
                    android:padding="4dp"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/cell_border"
                    android:text="Charges (`)"
                    android:textStyle="bold"
                    android:textSize="12sp"
                    android:padding="4dp"/>
            </TableRow>

            <TableRow>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/cell_border"
                    android:text="1"
                    android:textSize="12sp"
                    android:padding="4dp"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/cell_border"
                    android:text="Per head load (up to 40kg)"
                    android:textSize="12sp"
                    android:padding="4dp"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/cell_border"
                    android:text="Raipur"
                    android:textSize="12sp"
                    android:padding="4dp"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/cell_border"
                    android:text="NSG-2"
                    android:textSize="12sp"
                    android:padding="4dp"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/cell_border"
                    android:text="100/-"
                    android:textSize="12sp"
                    android:padding="4dp"/>
            </TableRow>

            <!-- Repeat similar TableRow for other entries -->

            <TableRow>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/cell_border"
                    android:text="2"
                    android:textSize="12sp"
                    android:padding="4dp"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/cell_border"
                    android:text="Waiting charges (per 30 mins)"
                    android:textSize="12sp"
                    android:padding="4dp"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/cell_border"
                    android:text="Raipur"
                    android:textSize="12sp"
                    android:padding="4dp"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/cell_border"
                    android:text="NSG-2"
                    android:textSize="12sp"
                    android:padding="4dp"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/cell_border"
                    android:text="60/-"
                    android:textSize="12sp"
                    android:padding="4dp"/>
            </TableRow>

            <TableRow>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/cell_border"
                    android:text="3"
                    android:textSize="12sp"
                    android:padding="4dp"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/cell_border"
                    android:text="Wheeled barrows (up to 160kg)"
                    android:textSize="12sp"
                    android:padding="4dp"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/cell_border"
                    android:text="Raipur"
                    android:textSize="12sp"
                    android:padding="4dp"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/cell_border"
                    android:text="NSG-2"
                    android:textSize="12sp"
                    android:padding="4dp"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/cell_border"
                    android:text="120/-"
                    android:textSize="12sp"
                    android:padding="4dp"/>
            </TableRow>

            <TableRow>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/cell_border"
                    android:text="4"
                    android:textSize="12sp"
                    android:padding="4dp"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/cell_border"
                    android:text="Carrying sick/disabled (wheelchair by 2)"
                    android:textSize="12sp"
                    android:padding="4dp"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/cell_border"
                    android:text=""
                    android:textSize="12sp"
                    android:padding="4dp"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/cell_border"
                    android:text=""
                    android:textSize="12sp"
                    android:padding="4dp"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/cell_border"
                    android:text="100/-"
                    android:textSize="12sp"
                    android:padding="4dp"/>
            </TableRow>

            <TableRow>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/cell_border"
                    android:text="4"
                    android:textSize="12sp"
                    android:padding="4dp"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/cell_border"
                    android:text="Carrying sick/disabled (by 4)"
                    android:textSize="12sp"
                    android:padding="4dp"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/cell_border"
                    android:text=""
                    android:textSize="12sp"
                    android:padding="4dp"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/cell_border"
                    android:text=""
                    android:textSize="12sp"
                    android:padding="4dp"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/cell_border"
                    android:text="150/-"
                    android:textSize="12sp"
                    android:padding="4dp"/>
            </TableRow>

        </TableLayout>
    </LinearLayout>
</ScrollView>
